<script>
document.addEventListener('DOMContentLoaded', function () {
  const toggleLinks = document.querySelectorAll('.toggle-content');

  toggleLinks.forEach(link => {
    link.addEventListener('click', function (event) {
      event.preventDefault();

      const targetId = this.getAttribute('data-target');
      const targetContent = document.querySelector(targetId);
      const arrowIcon = this.querySelector('.arrow-icon');
      const accItemBar = this.closest('.acc-item').querySelector('.acc-item-bar');

      if (targetContent.style.display === 'none') {
        targetContent.style.display = 'block';
        arrowIcon.classList.remove('bi-arrow-down-circle-fill');
        arrowIcon.classList.add('bi-arrow-up-circle-fill');
        accItemBar.classList.add('acc-item-bar-active'); 
      } else {
        targetContent.style.display = 'none';
        arrowIcon.classList.add('bi-arrow-down-circle-fill');
        arrowIcon.classList.remove('bi-arrow-up-circle-fill');
        accItemBar.classList.remove('acc-item-bar-active'); 
      }
    });
  });
});

</script>
